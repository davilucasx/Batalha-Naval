{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Batalha Naval",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/main.c",
                "${workspaceFolder}/funcoes/leitorTXT.c",
                "${workspaceFolder}/funcoes/matriz.c",
                "${workspaceFolder}/objetos/navios.c",
                
                "-o",
                "${workspaceFolder}/output/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
